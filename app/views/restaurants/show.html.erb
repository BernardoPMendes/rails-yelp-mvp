<div class="m-5">
  <div class="">
    <h1 class="fs-1">Title</h1>
    <p class="fs-3" ><%= @restaurant.name %></p>
  </div>

  <div class="">
    <h2 class="fs-2">Address</h2>
    <p class="fs-5"><%= @restaurant.address %></p>
  </div>

  <div class="">
    <h2 class="fs-2">Type</h2>
    <p class="fs-5"><%= @restaurant.category %></p>
  </div>

  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>
      <p>
      <%= review.content %>
      <%= review.rating %>
      </p>
    </li>
  <% end %>
  </ul>

  <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit class: "btn btn-outline-secondary btn-sm"%>
    <% end %>
    
  <p class="mt-3" > <%= link_to "Go back home", restaurants_path, class:"text-decoration-none btn btn-outline-secondary btn-sm"%> </p>
</div>
