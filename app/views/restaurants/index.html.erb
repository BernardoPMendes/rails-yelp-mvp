<div class="container mt-4">
  <h1>My restaurants</h1>

    <% @restaurants.each do |restaurants|%>
  <div class="">
    <p class="mt-4 mb-0 text-center "> <%= link_to restaurants.name, restaurant_path(restaurants), class:"" %> </p>
    </div>
      <%= link_to "Delete", restaurant_path(restaurants), class:"text-decoration-none btn btn-danger btn-sm", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      <%= link_to "edit", edit_restaurant_path(restaurants), class:"text-decoration-none btn btn-info btn-sm"%>
      <% end %>

  <p class="mt-3"> <%= link_to "create new", new_restaurant_path, class:"text-decoration-none btn btn-primary btn-sm" %> </p>
</div>
